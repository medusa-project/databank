= form_for @nested_item do |f|
  - if @nested_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nested_item.errors.count, "error")} prohibited this nested_item from being saved:"
      %ul
        - @nested_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :datafile_id
    = f.number_field :datafile_id
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :item_name
    = f.text_field :item_name
  .field
    = f.label :media_type
    = f.text_field :media_type
  .field
    = f.label :size
    = f.number_field :size
  .actions
    = f.submit 'Save'
