%h2 New Version Request Form
.container-fluid
  = form_for(@dataset, :url => {action: 'update'}, html: {role: "form", class: "input-append dataset-form" }) do |f|
    = f.hidden_field :id
    = f.hidden_field :previous_id, value: @previous.id
    .form-group
      - version_comment_label = "In 1-2 sentences, please summarize why you would like to create a new version of this dataset:"
      = f.label :version_comment, version_comment_label, class: "control-label"
      %br
      = f.text_area :version_comment, rows: 1, cols: 80, class: "form-control dataset"
    = render partial: 'datasets/version_files_subform', locals: {f: f}
    .row
      .col-md-3.col-md-offset-9
        = f.submit class: "btn btn-primary btn-block idb" do
          Request New Version
          %span.glyphicon.glyphicon-triangle-right
        =link_to("/contact", class: "btn btn-success btn-block idb") do
          %span.glyphicon.glyphicon-question-sign
          Get Help
        =link_to("/datasets/#{@previous.key}", class: "btn btn-block btn-danger idb", name: "cancel", id: 'cancel-button') do
          %span.glyphicon.glyphicon-remove
          Cancel
        %br

