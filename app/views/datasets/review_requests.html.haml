= render 'brief_record', dataset:@dataset
.panel-group(id="reviews" aria-multiselectable="true")
  .panel.panel-default
    .panel-heading(id="reviewsHeading")
      %h4(class="panel-title")
        %a(role="button" data-toggle="collapse" data-parent="#access" href="#reviewsPanel" aria-expanded="false" aria-controls="reviewsPanel" class="accordion-toggle collapsed" )
          %span( class="metadata-label" ) Pre-publication Review Requests
    .panel-collapse.collapse.in(id="reviewsPanel" role="tabpanel" aria-labelledby="reviewsHeading" )
      .panel-body
        %a(href="/review_requests") See all review requests for all datasets
        -if @dataset.review_requests.count > 0
          %h3
            Pre-publication review requested for this dataset at:
          .indent
            -@dataset.review_requests.each do |review|
              %h4
                =review.requested_at.strftime("%Y-%m-%d")
                =" | "
                -# display an indication if the dataset has been modified since the review was requested
                -if review.modified
                  %span(class="label label-warning") Dataset modified since review requested
                - else
                  %span(class="label label-success") Dataset not modified since review requested
              %p
                -# display the change log for the review request
                -if review.change_log.present?
                  %table.table.table-striped
                    %caption
                      %strong
                        Metadata Change log
                    -review.change_log.each do |change|
                      %tr.row
                        %td
                          ="#{change[:action]}: #{change[:audited_changes]}"
                        %td
                          ="#{change[:created_at].iso8601.to_s}"
                - else
                  %em No change log provided for this review request.
        -else
          %br
          No pre-publication review request records found for this dataset.


