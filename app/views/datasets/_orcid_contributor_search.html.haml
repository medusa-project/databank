.modal.fade.modal-lg(id="orcid_contributor_search" role="dialog" )
  .modal-content
    .modal-header
      %a(href="#" class="close" data-dismiss="modal")
        &times;
      %h3 Indexable for ORCID&reg; iD

    .modal-body

      .form
        %input(type="hidden" id="contributor-index" name="contributor-index" value="unset" )
        %input(type="hidden" id="selected-id" name="selected-id" value = "")
        %input(type="hidden" id="selected-given-name" name="selected-given-name" value="" )
        %input(type="hidden" id="selected-family-name" name="selected-family-name" value="" )
        .row
          .col-md-4
            .form-group
              %label(for="family-name")
                Family Name
              %input(type="text" class="form-control" name="contributor-family" id="contributor-family" )
          .col-md-4
            .form-group
              %label(for="given-name")
                Given Name
              %input(type="text" class="form-control" name="contributor-given" id="contributor-given" )
          .col-md-4
            %br
            %button(type="button" class="btn btn-primary" onclick="search_contributor_orcid()" )
              %span(class="glyphicon glyphicon-search" )
              Search
        .loading.text-center
          %i(class="far fa-spinner fa-spin fa-4x orcid-search-spinner" )
        .container-fluid
          .results(id="orcid-search-results")


    .modal-footer
      .control-group
        .controls
          %button(type="button" class="btn btn-danger" data-dismiss="modal")
            %span(class="glyphicon glyphicon-remove" )
            Cancel
          %button(type='button' id='orcid-import-btn' class='btn btn-success' data-dismiss="modal" onclick='set_contributor_orcid_from_search_modal()' disabled)
            %span(class="glyphicon glyphicon-transfer" )
            Import Selection




